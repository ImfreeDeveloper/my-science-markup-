          ) }}
          {{ dmsInfoItem(
            [
              'Врачи-эксперты узкой специализации + вся необходимая аппаратная диагностика по профилю заболевания',
            ],
            [
              'фгс',
              'узи всех видов',
              'фиброколоноскопия',
              'флюорография',
              'маммография',
              'рентген',
              'и др.'
            ]
          ) }}
          {{ dmsInfoItem(
            ['Помощь на дому'],
            [
              'осмотр врача-терапевта',
              'постановка диагноза',
              'назначение обследований',
              'назначение лечения',
              'назначение повторного приема (на дому, амбулаторно, онлайн).'
            ]
          ) }}
          {{ dmsInfoItem(
            [
              'Стоматологическая помощь в объеме предусмотренном вашим страховым полисом'
