{% macro tile(formBr) %}
	{% set classNameformBr = formBr ? 'tile_form-br_' ~ formBr: '' %}
	<div class="tile {{ classNameformBr }}"></div>
{% endmacro %}

{% macro form_field(name, label='', type='text', placeholder='') %}
	<div class="form-field">
		<label class="form-field__label" for="{{ name }}_id">{{ label }}</label>
		<div class="form-field__input">
			<input id="{{ name }}_id" name="{{ name }}" type="{{ type }}" placeholder="{{ placeholder }}" />
		</div>
		<div class="form-field__messages"></div>
	</div>
{% endmacro %}

{% macro modal() %}
	{% import _self as inputs %}
	<div class="modal-popup hidden">
		<div class="modal-popup-wrapper" >
			<div class="modal-popup-container">
				<div class="modal-popup-body">
					<div id="js-modal-text" class="modal-popup-body__block hidden">
						<h3 class="modal-popup-body__title">Заголовок</h3>
						<div class="modal-popup-body__description">
							<p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Accusamus, ad aut beatae consectetur cumque deserunt dicta et fugiat illum incidunt maxime molestias nam nemo pariatur, porro provident rerum ullam voluptate!</p>
							<p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Accusamus, ad aut beatae consectetur cumque deserunt dicta et fugiat illum incidunt maxime molestias nam nemo pariatur, porro provident rerum ullam voluptate!</p>
						</div>
					</div>

					<div id="js-modal-sign-in" class="modal-popup-body__block hidden">
						<div class="js-loader modal-popup-body__loader hidden">
							<div class="loader"></div>
						</div>
						<form action="#" class="form" id="js-form-auth">
							{{ inputs.form_field("name", 'Имя', 'text', '') }}
							{{ inputs.form_field("surname", 'Фамилия', 'text', '') }}
							{{ inputs.form_field("phone", 'Телефон', 'text', '') }}
							{{ inputs.form_field("email", 'E-mail', 'text', '') }}
							{{ inputs.form_field("password", 'Пароль', 'password', '') }}
							<button type="submit" class="js-send-auth btn btn-red form__btn">Отправить</button>
						</form>
						<div class="js-success modal-popup-body__success hidden">
							<p class="modal-popup-body__success-title">Ваша заявка Уё!)))</p>
						</div>
					</div>

					<span class="modal-popup-close icon-close">
            <img src="./images/svg/icon-close.svg" alt="close" />
					</span>
				</div>
			</div>
		</div>
	</div>
{% endmacro %}

{% macro card(caption, description, title, text, img, className='') %}
	<div class="card {{ className }}">
		<div class="card__art" style="background-image: url('./images/{{ img }}');">
			<div class="card__art-wrap">
				<span class="card__art-leaf"></span>
				<p class="card__art-caption">{{ caption }}</p>
				<p class="card__art-description">{{ description }}</p>
			</div>
		</div>
{#		{% if users|length > 0 %} {% endif %}#}
		<div class="card__info">
			<p class="card__info-title">{{ title }} <span>реклама</span></p>
			<p class="card__info-text">{{ text }}</p>
			<a href="#" class="btn btn-light-green">подробнее</a>
		</div>
	</div>
{% endmacro %}

{% macro newsItem(date, caption) %}
	<div class="news-item">
		<div class="news-item__content">
			<div class="news-item__wrap">
				<div class="news-item__top">
					<div class="news-item__logo"></div>
					<p class="news-item__date">{{ date }}</p>
				</div>
				<div class="news-item__caption">{{ caption }}</div>
				<a href="#" class="btn btn-light-green">подробнее</a>
				<span class="news-item__circle">
				{{ _self.img('svg/icon-circle.svg') }}
			</span>
			</div>
		</div>


	</div>
{% endmacro %}

{% macro serviceMain(title, text, img) %}
	<div class="sec-services__main">
		<div class="sec-services__main-bg"
				 style="background-image: url('./images/{{ img }}');">
		</div>
		<div class="sec-services__main-wrap">
			<div class="sec-services__main-logo">
				{{ _self.svg('id-svg-logo', 'svg-logo-service') }}
			</div>
			<h3 class="sec-services__main-title">{{ title }}</h3>
			<p class="sec-services__main-text">{{ text }}</p>
			<a href="#" class="btn btn-light-green">подробнее</a>
		</div>
	</div>
{% endmacro %}

{% macro serviceItem(title, text) %}
	<div class="sec-services__item">
		<span class="sec-services__item-circle">
			{{ _self.img('svg/icon-circle.svg') }}
		</span>
		<div class="sec-services__item-wrap">
			<h3 class="sec-services__item-title">{{ title }}</h3>
			<p class="sec-services__item-text">{{ text }}</p>
			<a href="#" class="btn btn-light-green">подробнее</a>
		</div>
	</div>
{% endmacro %}

{% macro patientServicesItem(title, name) %}
	<a href="#" class="sec-patient__services-item sec-patient__services-item_{{ name }}">
		<span>{{ title }}</span>
	</a>
{% endmacro %}

{% macro aboutNumbersItem(title, descr, symbl = '') %}
	<div class="about-numbers__item">
		<p class="about-numbers__item-title">
			{% if symbl %}
				<span>{{ symbl }}</span>
			{% endif %}
			{{ title }}
		</p>
		<p class="about-numbers__item-descr">{{ descr }}</p>
	</div>
{% endmacro %}

{% macro doctorsItem(title, descr, photo) %}
	<div class="sec-doctors__item">
		<div class="sec-doctors__item-img" style="background-image: url('./images/{{ photo }}');"></div>
		<div class="sec-doctors__item-info">
			<p class="sec-doctors__item-title">{{ title }}</p>
			<p class="sec-doctors__item-descr">{{ descr }}</p>
			<a href="#" class="btn btn-light-green">Записаться</a>
		</div>
	</div>
{% endmacro %}

{% macro analysisPriceItem(title, descr, price) %}
	<div class="sec-analysis__price-item">
		<div class="sec-analysis__price-descr">
			<h4>{{ title }}</h4>
			<p>{{ descr }}</p>
		</div>
		<div class="sec-analysis__price-deadline">
			<p>Срок исполнения: 3-7</p>
			<p>Код: 1236</p>
		</div>
		<div class="sec-analysis__price-info">
			<i>{{ price }} р</i>
			<button class="btn btn-light-green btn-add-cart">
				{{ _self.svg('id-cart', 'svg-cart') }}
			</button>
		</div>
	</div>
{% endmacro %}

{% macro analysisMenuItem(name, submenu) %}
	<li class="sec-analysis__menu-item">
		<a href="#">
			{{ name }}
			{% if submenu|length > 0 %}
				<span>
					{{ _self.svg('id-arrow-right', 'svg-arrow-right') }}
				</span>
			{% endif %}
		</a>
		{% if submenu|length > 0 %}
			<ul>
				{% for item in submenu %}
					<li>
						<a href="#">{{ item.name }}</a>
					</li>
				{% endfor %}
			</ul>
		{% endif %}

	</li>
{% endmacro %}

